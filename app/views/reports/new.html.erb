<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>

<div class="col-sm-12">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="col-sm-12">
            <div class="row bg_white pad_top2 radius">      

                <div class="col-sm-3 bg_green right_radius pad_top min_height" style="height:500px">
                    <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-8">
                       <a class="thumbnail">
                        <img src="/assets/profile_img.jpg" alt="" style="height: 9em; width: 9em;"> </a>
                        <div class="caption font_style1 pull-right">
                            
                            <h6 class="caption font_style1 pull-right"><%= current_user.first_name %></h6> <br> 
                        </div>
                    </div>
                    </div>
                    

                   
                </div>

                <div class="col-sm-9 pad_rl2">
                    <div class ="row pad_left radius bg_silver">
                        <p style="float: left;"><img class="img-responsive" src="/assets/project.png" alt=""></p><p> &nbsp; PROJECT</p>
                    </div>
                    <div class="row pad_top">

           <div class="col-sm-12">

                <ul id="myTab" class="nav nav-pills">
                  <li class="active"><a href="#tristatus" data-toggle="tab">TRI-STATUS</a></li>
                  <li><a href="#triharder" data-toggle="tab">TRI-HARDER</a></li>                   
                </ul>
             
                <div id="myTabContent" class="tab-content">         <!-- full tab content -->

                      <div class="tab-pane fade in active" id="tristatus">
                          
                            <div class="well">
                            <div class="row"> 
                            <div class="col-sm-12">                          

                              <%= form_tag project_site_reports_path, :html => {:multipart => true},  class: "form-horizontal" do  %>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Summary</label>
                                  <div class="col-md-9">                                  
                                      <%= text_field_tag :summary, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,50}",  placeholder: 'Fill The Summary', required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Efficiency</label>
                                  <div class="col-md-9">                                  
                                      <%= text_field_tag :effciency, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[0-9.% ]{1,50}",  placeholder: 'Fill The Efficiency', required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Upload Today's Pic</label>
                                  <div class="col-md-9">                                  
                                      <div>
                                         <%= file_field_tag :image , class: "form-control",required: true %>
                                      </div>
                                  </div>
                              </div>

                        
                              <div class="form-group">                
                                  <label class="control-label col-md-3">Safety Meeting</label>
                                  <div class="col-md-9">
                                      <%= hidden_field_tag :report_type , 'tristatus' %>
                                      <%= text_area_tag :safety_meeting, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,1050}",  placeholder: 'Fill The Details of Safety Meeting',  rows: "4", required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Materials</label>
                                  <div class="col-md-9">                                  
                                      <%= text_area_tag :materials, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,1050}",  placeholder: 'Fill The Details of Materials',  rows: "4",required: true %>
                                  </div>
                              </div>
                       
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-4">
                                      <%= submit_tag 'Submit', :class => 'btn btn-primary btn-block' %>
                                </div>
                                <div class="col-md-4">
                                    <a href="#"> <button type="button" class="btn btn-primary btn-block">Cancel </button></a>
                                </div>
                          
                              <% end %>
                              </div>
                            </div>
                          </div>
                      </div>

                      <div class="tab-pane fade" id="triharder">
                            <div class="well">
                            <div class="row"> 
                            <div class="col-sm-12">                          

                              <%= form_tag project_site_reports_path, :html => {:multipart => true},  class: "form-horizontal" do  %>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Summary</label>
                                  <div class="col-md-9">                                  
                                      <%= text_field_tag :summary, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,50}",  placeholder: 'Fill The Summary', required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Efficiency</label>
                                  <div class="col-md-9">                                  
                                      <%= text_field_tag :effciency, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[0-9.% ]{1,50}",  placeholder: 'Fill The Efficiency', required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Control In Place</label>
                                  <div class="col-md-9">                                  
                                      <%= text_field_tag :controls_in_place, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,50}",  placeholder: 'Fill The Control in Place', required: true %>
                                  </div>
                              </div>

                                                     
                              <div class="form-group">                
                                  <label class="control-label col-md-3">Project Start Condition</label>
                                  <div class="col-md-9">
                                      <%= hidden_field_tag :report_type , 'triharder' %>
                                      <%= text_area_tag :project_start_condition, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,1050}",  placeholder: 'Fill The Details of Project Start Condition',  rows: "4", required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Today's condition</label>
                                  <div class="col-md-9">                                  
                                      <%= text_area_tag :todays_condition, nil, type:"text", tabindex: "1", class: "form-control", pattern: "[a-zA-Z. ]{1,1050}",  placeholder: 'Fill The Details of Todays Condition',  rows: "4",required: true %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-md-3">Upload Today's Pic</label>
                                  <div class="col-md-9">                                  
                                      <div>
                                         <%= file_field_tag :image, class: "form-control",required: true %>
                                      </div>
                                  </div>
                              </div>
                       
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-4">
                                      <%= submit_tag 'Submit', :class => 'btn btn-primary btn-block' %>
                                </div>
                                <div class="col-md-4">
                                    <a href="#"> <button type="button" class="btn btn-primary btn-block">Cancel </button></a>
                                </div>
                          
                              <% end %>
                              </div>
                            </div>
                          </div>
                      </div>
                </div>
            </div>


                            

            
              
             
                    </div>                    

                </div>

                <div class="col-sm-12 pad_top2">
                    <div class="row bg_black bottom_radius">
                        <p class="font_style1 pad_left"> &copy; | Triton | All Rights Reserved |</p>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <div class="col-sm-1"></div>
</div>


         

    <!-- jQuery Version 1.11.0 -->
    <script src="/assets/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>

</body>

</html>









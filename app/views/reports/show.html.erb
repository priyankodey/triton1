                            		<div class="col-sm-12">
                            			<div class="col-sm-4">
                            				<span>Target Tasks</span>
                            			</div>
                            			<div class="col-sm-4">
                            				<span>Completed Tasks</span>
                            			</div>
                            			<div class="col-sm-4">
                            				<span>Efficiency</span>
                            			</div>
                            		</div>
                            		<div class="row">
                            			<div class="col-sm-12">
                            				<hr>
                            			</div>                    			
                            		</div> 
                                    <% @tasks_today.each  do |t1| %>
                                    <div class="col-sm-12">
                                        <div class="col-sm-4">
                                            <span><%=  t1.target_task %></span>
                                        </div>
                                        <div class="col-sm-4">
                                            <span><%= t1.completed_task %></span>
                                        </div>
                                        <div class="col-sm-4">
                                            <span><%= t1.efficiency %></span>
                                        </div>
                                        </div>
                                        <% end %>
                                    
                            		</div> 
                                    <% end %>        
                            	</div>
                        

                    	<div id="tri_s_today" >
                    		<div class="col-sm-12">
                    			<span>Today's Photo</span>
                    		</div>
                    		<div class="row">
                    			<div class="col-sm-12">
                    				<hr>
                    			</div>                    			
                    		</div>
                    		<div class="col-sm-12">
                    			<div class="row pad_bot5">
                    				<div class="col-sm-4">
                    					
                    				</div>
                    				<div class="col-sm-8">
                                        <% if @report.image? %>
                    					<p><%= image_tag @report.image_url(:thumb)  %></p>
                                        <br>
                                        <%= link_to 'Download Image' , @report.image.url , :target => '_blank' %>
                                        <% end %>
                    				</div>
                    			</div>
                    		</div>
                    	</div>

                    	<div id="tri_s_safety" >
                    		<div class="col-sm-12">
                    			<span>Safety Meeting</span>
                    		</div>
                    		<div class="row">
                    			<div class="col-sm-12">
                    				<hr>
                    			</div>                    			
                    		</div>
                    		<div class="col-sm-12">
                    			<div class="row pad_bot5">
                    				<div class="col-sm-6">                                        
                    					<span><%= @report.safety_meeting %></span>
                    				</div>
                                    <div class="col-sm-6">                                        
                                        <span><%= link_to 'Download File' , @report.safety_doc.url  %></span>
                                    </div>                    				
                    			</div>
                    		</div>
                    	</div>

                    	
                        <% if @tasks_tomorrow != [] %>
                                <div id="tri_s_tomorrow" >
                                    <div class="row pad_bot5">
                                    <div class="col-sm-12">
                                        <div class="col-sm-4">
                                            <span>Target Tasks</span>
                                        </div>
                                        <div class="col-sm-4">
                                            <span>Completed Tasks</span>
                                        </div>
                                        <div class="col-sm-4">
                                            <span>Efficiency</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <hr>
                                        </div>                              
                                    </div> 
                                    <% @tasks_tomorrow.each  do |t1| %>
                                    <div class="col-sm-12">
                                        <div class="col-sm-4">
                                            <span><%=  t1.target_task %></span>
                                        </div>
                                        <div class="col-sm-4">
                                            <span><%= t1.completed_task %></span>
                                        </div>
                                        <div class="col-sm-4">
                                            <span><%= t1.efficiency %></span>
                                        </div>
                                        </div>
                                        <% end %>
                                    
                                    </div>         
                                </div>
                        <% end %>


                    	<div id="tri_s_material">
                    		<div class="col-sm-12">
                    			<span>Materials</span>
                    		</div>
                    		<div class="row">
                    			<div class="col-sm-12">
                    				<hr>
                    			</div>                    			
                    		</div>
                    		<div class="col-sm-12">
                    			<div class="row pad_bot5">
                    				<div class="col-sm-6">
                    					<span><%= @report.materials %></span>
                    				</div>
                                    <div class="col-sm-6">
                                        <% if @report.material? %>
                                        <p><%= image_tag @report.material_url (:thumb) %></p>
                                        <br>
                                        <%= link_to 'Download Image' , @report.material.url , :target => '_blank' %>
                                        <% end %>
                                    </div>                    				
                    			</div>
                    		</div>
                    	</div>

                    </div>                   

                </div>

                <div class="col-sm-12 pad_top2">
                    <div class="row bg_black bottom_radius">
                        <p class="font_style1 pad_left"> &copy; | Triton | All Rights Reserved |</p>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <div class="col-sm-1"></div>
</div>

    <!-- jQuery Version 1.11.0 -->
    <script src="/assets/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>

</body>

</html>





